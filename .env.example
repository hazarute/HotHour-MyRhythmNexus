# HotHour environment example
# Copy this to .env and fill values for your environment.

# App
APP_ENV=development
DEBUG=true
SECRET_KEY=change-me-to-a-secure-random-string
TZ=UTC
LOG_LEVEL=INFO

# Database (Postgres)
DATABASE_URL=postgresql+asyncpg://hothour_user:password@localhost:5432/hothour_db
# Or set components separately:
# POSTGRES_USER=hothour_user
# POSTGRES_PASSWORD=yourpassword
# POSTGRES_DB=hothour_db
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432

# Redis (used for Socket.IO message queue and caching)
REDIS_URL=redis://localhost:6379/0
SOCKETIO_MESSAGE_QUEUE=redis://localhost:6379/1

# Web / Security
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000

# Third-party integrations (leave blank if unused)
SENTRY_DSN=
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Feature toggles
PAYMENTS_ENABLED=false
